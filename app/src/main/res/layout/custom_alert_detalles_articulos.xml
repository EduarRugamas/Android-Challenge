<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="25dp"
    app:cardCornerRadius="20dp"
    android:layout_margin="20dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/alert_text_titulo"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="2dp"
            android:textColor="@color/color_textos_verde"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            tools:text="Hola mundo" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/alert_imagen_api"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            app:layout_constraintTop_toBottomOf="@id/alert_text_titulo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            tools:src="@drawable/ic_android"
            />

        <TextView
            android:id="@+id/alert_text_contenido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:justificationMode="inter_word"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/alert_imagen_api"
            tools:text="@string/Contenido"
            tools:targetApi="o" />

        <TextView
            android:id="@+id/alert_text_fecha_publi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Fecha de publicacion"
            app:layout_constraintTop_toBottomOf="@id/alert_text_contenido"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/alert_text_autor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="autor"
            android:ellipsize="marquee"
            app:layout_constraintTop_toBottomOf="@id/alert_text_fecha_publi"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/alert_btn_sitio_web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ir_a_sitio_web"
            android:drawableStart="@drawable/ic_web_internet"
            android:backgroundTint="@color/color_textos_verde"
            android:background="@drawable/custom_button"
            android:drawablePadding="0dp"
            android:paddingStart="70dp"
            android:paddingEnd="90dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/alert_text_autor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>